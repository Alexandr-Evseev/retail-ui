{
  "compilerOptions": {
    "baseUrl": "./packages",
    "sourceMap": true,
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es2017", "es2015", "dom"],
    "importHelpers": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "types": ["@types/jest", "@types/mocha"],
    "typeRoots": ["node_modules/creevey/types", "node_modules/@types"]
  },
  "exclude": ["node_modules", "**/node_modules/*", "**/styleguide", "**/build"]
}
