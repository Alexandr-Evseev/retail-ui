---
parser: "@typescript-eslint/parser"

plugins:
  - "@typescript-eslint"
  - react
  - react-hooks
  - import

env:
  browser: true
  node: true
  jest: true
  jasmine: true
  es6: true

extends:
  - plugin:react/recommended
  - plugin:import/errors
  - plugin:import/warnings
  - plugin:import/typescript
  - plugin:@typescript-eslint/recommended
  - prettier
  - prettier/@typescript-eslint

settings:
  react:
    version: detect

globals:
  __DEV__: true
  # Built ins
  Generator: true
  Iterable: true
  # Flow
  $Shape: true
  # React events
  SyntheticClipboardEvent: true
  SyntheticCompositionEvent: true
  SyntheticDragEvent: true
  SyntheticEvent: true
  SyntheticFocusEvent: true
  SyntheticInputEvent: true
  SyntheticKeyboardEvent: true
  SyntheticMouseEvent: true
  SyntheticTouchEvent: true
  SyntheticUIEvent: true
  SyntheticWheelEvent: true
  # Testing
  Lookup: true
  ReactTesting: true

rules:
  # typescript rules
  "@typescript-eslint/explicit-function-return-type": 0
  # TODO enforce to error after migration to import
  "@typescript-eslint/no-var-requires": 0
  "react/prop-types": 0
  "import/no-unresolved": 0
  "import/no-duplicates": 2
  "import/no-default-export": 2

  #TODO should be enforced before v2.0.0 release
  "react/no-find-dom-node": 0
  "react/display-name": 0
  "react/no-children-prop": 0
  "@typescript-eslint/no-unused-vars": 0
  "@typescript-eslint/no-explicit-any": 0
  "@typescript-eslint/ban-ts-ignore": 0
  "@typescript-eslint/no-use-before-define": 0
  "@typescript-eslint/camelcase": 0
  "@typescript-eslint/no-non-null-assertion": 0


